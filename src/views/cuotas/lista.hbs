<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Saldo Inicial</th>
      <th scope="col">Saldo cierre</th>
      <th scope="col">Direccion</th>
      <th scope="col">Monto</th>
    </tr>
  </thead>
  <tbody>
      <a href="/cuotas/add" class=" btn btn-primary"> Añadir</a></td>
       
    <tr>
        {{#each cuotas}}
      <th scope="row">{{id}}</th>
      <td> {{saldo_inicial}}</td>
      <td>{{saldo_cierre}}</td>
      <td>{{id_cliente}}</td>
      <td>{{monto}}</td>
      
      <td><a href="/links/edit/{{id}}" class=" btn btn-secondary"> Editar </a></td>
      <td><a href="/cuotas/{{id}}" class=" btn btn-primary"> Cuotas</a></td>
      <td><a href="/cuotas/delete/{{id}}" class=" btn btn-danger"> Borrar</a></td>
    </tr>   
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p> No hay clientes</p>
                <a href="/cuotas/add"> Añadir</a>
            </div>
        </div>
   

        {{/each }}
  </tbody>
</table>

