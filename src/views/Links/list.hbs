
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Direccion</th>
    </tr>
  </thead>
  <tbody>
      <a href="/links/add" class=" btn btn-primary"> Crear Cliente</a></td>
       
    <tr>
        {{#each links}}
      <th scope="row">{{id}}</th>
      <td> {{Nombre}}</td>
      <td>{{Apellido}}</td>
      <td>{{Direccion}}</td>
      
      <td><a href="/links/edit/{{id}}" class=" btn btn-secondary"> Editar </a></td>
      <td><a href="/cuotas/cuotas/{{id}}" class=" btn btn-primary"> Cuotas</a></td>
      <td><a href="/links/delete/{{id}}" class=" btn btn-danger"> Borrar</a></td>
    </tr>   
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p> No hay clientes</p>
                <a href="/links/add"> Crear uno</a>
            </div>
        </div>
   

        {{/each }}
  </tbody>
</table>






